<Window x:Class="Aimmy2.Visuality.GamepadTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gamepad Test Window" Height="850" Width="900"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style TargetType="Border" x:Key="ButtonIndicator">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="LabelText">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="HeaderText">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Gamepad Controller Test" Style="{StaticResource HeaderText}" FontSize="20" HorizontalAlignment="Center"/>

        <!-- Connection Status -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <TextBlock Text="Connection Status: " Style="{StaticResource LabelText}" FontSize="14"/>
            <TextBlock x:Name="ConnectionStatus" Text="Disconnected" Style="{StaticResource LabelText}" FontSize="14" Foreground="Red"/>
        </StackPanel>

        <!-- Controller Layout -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Face Buttons (Right side) -->
            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                <TextBlock Text="Face Buttons" Style="{StaticResource HeaderText}"/>
                <Grid Width="200" Height="200">
                    <Border x:Name="BtnY" Style="{StaticResource ButtonIndicator}" 
                            HorizontalAlignment="Center" VerticalAlignment="Top">
                        <TextBlock Text="Y" Style="{StaticResource LabelText}"/>
                    </Border>
                    <Border x:Name="BtnB" Style="{StaticResource ButtonIndicator}"
                            HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="B" Style="{StaticResource LabelText}"/>
                    </Border>
                    <Border x:Name="BtnA" Style="{StaticResource ButtonIndicator}"
                            HorizontalAlignment="Center" VerticalAlignment="Bottom">
                        <TextBlock Text="A" Style="{StaticResource LabelText}"/>
                    </Border>
                    <Border x:Name="BtnX" Style="{StaticResource ButtonIndicator}"
                            HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="X" Style="{StaticResource LabelText}"/>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- D-Pad (Left side) -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                <TextBlock Text="D-Pad" Style="{StaticResource HeaderText}"/>
                <Grid Width="200" Height="200">
                    <Border x:Name="BtnUp" Style="{StaticResource ButtonIndicator}"
                            HorizontalAlignment="Center" VerticalAlignment="Top">
                        <TextBlock Text="↑" Style="{StaticResource LabelText}"/>
                    </Border>
                    <Border x:Name="BtnRight" Style="{StaticResource ButtonIndicator}"
                            HorizontalAlignment="Right" VerticalAlignment="Center">
                        <TextBlock Text="→" Style="{StaticResource LabelText}"/>
                    </Border>
                    <Border x:Name="BtnDown" Style="{StaticResource ButtonIndicator}"
                            HorizontalAlignment="Center" VerticalAlignment="Bottom">
                        <TextBlock Text="↓" Style="{StaticResource LabelText}"/>
                    </Border>
                    <Border x:Name="BtnLeft" Style="{StaticResource ButtonIndicator}"
                            HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBlock Text="←" Style="{StaticResource LabelText}"/>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- Center Buttons -->
            <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Center Buttons" Style="{StaticResource HeaderText}"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border x:Name="BtnBack" Style="{StaticResource ButtonIndicator}">
                        <TextBlock Text="BACK" Style="{StaticResource LabelText}" FontSize="10"/>
                    </Border>
                    <Border x:Name="BtnStart" Style="{StaticResource ButtonIndicator}">
                        <TextBlock Text="START" Style="{StaticResource LabelText}" FontSize="10"/>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Shoulders and Triggers -->
        <Grid Grid.Row="3" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Shoulders -->
            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Shoulders" Style="{StaticResource HeaderText}"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Border x:Name="BtnLB" Style="{StaticResource ButtonIndicator}" Width="80">
                    <TextBlock Text="LB" Style="{StaticResource LabelText}"/>
                </Border>
                <Border x:Name="BtnRB" Style="{StaticResource ButtonIndicator}" Width="80">
                    <TextBlock Text="RB" Style="{StaticResource LabelText}"/>
                </Border>
            </StackPanel>

            <!-- Triggers -->
            <StackPanel Grid.Row="2" Grid.Column="0" Margin="10">
                <TextBlock Text="Left Trigger (LT)" Style="{StaticResource LabelText}"/>
                <ProgressBar x:Name="LeftTriggerBar" Height="20" Minimum="0" Maximum="255" Value="0" 
                             Foreground="LimeGreen" Background="DimGray"/>
                <TextBlock x:Name="LeftTriggerValue" Text="0" Style="{StaticResource LabelText}"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.Column="1" Margin="10">
                <TextBlock Text="Right Trigger (RT)" Style="{StaticResource LabelText}"/>
                <ProgressBar x:Name="RightTriggerBar" Height="20" Minimum="0" Maximum="255" Value="0"
                             Foreground="LimeGreen" Background="DimGray"/>
                <TextBlock x:Name="RightTriggerValue" Text="0" Style="{StaticResource LabelText}"/>
            </StackPanel>

            <!-- Thumbsticks -->
            <StackPanel Grid.Row="3" Grid.Column="0" Margin="10">
                <TextBlock Text="Left Thumbstick" Style="{StaticResource LabelText}"/>
                <Border x:Name="BtnLS" Style="{StaticResource ButtonIndicator}" HorizontalAlignment="Center">
                    <TextBlock Text="LS" Style="{StaticResource LabelText}"/>
                </Border>
                <TextBlock x:Name="LeftThumbstickValue" Text="X: 0, Y: 0" Style="{StaticResource LabelText}"/>
            </StackPanel>
            <StackPanel Grid.Row="3" Grid.Column="1" Margin="10">
                <TextBlock Text="Right Thumbstick" Style="{StaticResource LabelText}"/>
                <Border x:Name="BtnRS" Style="{StaticResource ButtonIndicator}" HorizontalAlignment="Center">
                    <TextBlock Text="RS" Style="{StaticResource LabelText}"/>
                </Border>
                <TextBlock x:Name="RightThumbstickValue" Text="X: 0, Y: 0" Style="{StaticResource LabelText}"/>
            </StackPanel>
        </Grid>

        <!-- Control Buttons and Sequence Testing -->
        <StackPanel Grid.Row="4" Margin="10">
            <!-- Sequence Testing Section -->
            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Sequence Testing" Style="{StaticResource HeaderText}" FontSize="14"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Timeout Configuration -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Delay before start (seconds):" 
                                   Style="{StaticResource LabelText}" Margin="0,5,10,5" VerticalAlignment="Center"/>
                        <Slider Grid.Row="0" Grid.Column="1" x:Name="TimeoutSlider" 
                                Minimum="0" Maximum="10" Value="3" TickFrequency="1" 
                                IsSnapToTickEnabled="True" Margin="5"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" x:Name="TimeoutValue" Text="3s" 
                                   Style="{StaticResource LabelText}" Width="40" VerticalAlignment="Center"/>

                        <!-- Test Sequence Selection -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Test Sequence:" 
                                   Style="{StaticResource LabelText}" Margin="0,5,10,5" VerticalAlignment="Center"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" x:Name="SequenceSelector" 
                                  Background="#2D2D30" Foreground="White" Margin="5" Height="30"
                                  SelectionChanged="SequenceSelector_SelectionChanged">
                            <ComboBoxItem Content="A Button Press (500ms)" Tag="A_Button"/>
                            <ComboBoxItem Content="A+B Combo (1s)" Tag="AB_Combo"/>
                            <ComboBoxItem Content="D-Pad Circle (2s)" Tag="DPad_Circle" IsSelected="True"/>
                            <ComboBoxItem Content="Left Stick Circle (2s)" Tag="LStick_Circle"/>
                            <ComboBoxItem Content="Trigger Press (1s)" Tag="Trigger_Press"/>
                            <ComboBoxItem Content="Complex Combo (3s)" Tag="Complex_Combo"/>
                        </ComboBox>

                        <!-- Sequence Description -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" 
                                   x:Name="SequenceDescription" 
                                   Text="Simulates D-Pad presses in a circular pattern: Up → Right → Down → Left"
                                   Style="{StaticResource LabelText}" FontSize="10" 
                                   TextWrapping="Wrap" Margin="5" Foreground="LightGray"/>
                    </Grid>

                    <!-- Start Sequence Button and Status -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button x:Name="StartSequenceButton" Content="Start Test Sequence" Width="180" Height="35" 
                                Margin="5" Click="StartSequenceButton_Click"
                                Background="#0E7C0E" Foreground="White" BorderBrush="Gray" FontWeight="Bold"/>
                        <Button x:Name="StopSequenceButton" Content="Stop" Width="80" Height="35" 
                                Margin="5" Click="StopSequenceButton_Click" IsEnabled="False"
                                Background="#C42B1C" Foreground="White" BorderBrush="Gray"/>
                    </StackPanel>
                    
                    <TextBlock x:Name="SequenceStatus" Text="" Style="{StaticResource LabelText}" 
                               FontSize="12" Margin="5" Foreground="Yellow"/>
                </StackPanel>
            </Border>

            <!-- Control Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="RefreshButton" Content="Refresh Connection" Width="150" Height="30" 
                        Margin="5" Click="RefreshButton_Click"
                        Background="#2D2D30" Foreground="White" BorderBrush="Gray"/>
                <Button x:Name="CloseButton" Content="Close" Width="100" Height="30" 
                        Margin="5" Click="CloseButton_Click"
                        Background="#2D2D30" Foreground="White" BorderBrush="Gray"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
