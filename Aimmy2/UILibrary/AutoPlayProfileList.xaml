<UserControl x:Class="UILibrary.AutoPlayProfileList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:AntWpf.Controls;assembly=AntWpf"
             xmlns:uiLibrary="clr-namespace:Aimmy2.UILibrary"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border
        BorderThickness="1,0,1,0"
        BorderBrush="#3FFFFFFF">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListBox
                ItemsSource="{Binding Profiles, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Foreground="#DDFFFFFF"
                FontFamily="{StaticResource Atkinson Hyperlegible}"
                Margin="0"
                Padding="2"
                HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Text="{Binding Name}"
                                    ToolTip="{Binding Description}"
                                    Foreground="{Binding Enabled, Converter={StaticResource boolToBrush}}"
                                    Opacity="{Binding IsActive, Converter={StaticResource boolToOpacity}}"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0" />
                                <TextBlock
                                    Text="{Binding OllamaModel}"
                                    FontSize="10"
                                    Opacity="0.6"
                                    Foreground="#AAFFFFFF"
                                    VerticalAlignment="Center"
                                    Margin="0,0,5,0" />
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <uiLibrary:AToggle Background="Transparent" BorderBrush="Transparent" Text=""
                                                   Checked="{Binding Enabled, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <controls:Button
                                    ToolTip="Edit"
                                    BorderThickness="0"
                                    Tag="{Binding}"
                                    MouseDown="UIElement_OnMouseDown"
                                    Click="EditProfile_Click"
                                    EffectBrush="{StaticResource ButtonBackground}"
                                    Foreground="#ffffff"
                                    BorderBrush="#00D9D9D9"
                                    Background="Transparent"
                                    FontFamily="Segoe MDL2 Assets"
                                    Content="&#xEB7E;"
                                    Padding="0,0,0,0"
                                    FontSize="20"
                                    Width="50" />

                                <controls:Button
                                    ToolTip="Delete"
                                    BorderThickness="0"
                                    Tag="{Binding}"
                                    MouseDown="UIElement_OnMouseDown"
                                    Click="DeleteProfile_Click"
                                    EffectBrush="{StaticResource ButtonBackground}"
                                    Foreground="#ffffff"
                                    BorderBrush="#00D9D9D9"
                                    Background="Transparent"
                                    FontFamily="Segoe MDL2 Assets"
                                    Content="&#xE74D;"
                                    Padding="0,0,0,0"
                                    FontSize="20"
                                    Width="50" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Border Grid.Row="1">
                <controls:Button
                    HorizontalAlignment="Right"
                    ToolTip="Add Profile"
                    BorderThickness="0"
                    MouseDown="UIElement_OnMouseDown"
                    Click="AddProfile_Click"
                    EffectBrush="{StaticResource ButtonBackground}"
                    Foreground="#ffffff"
                    BorderBrush="#00D9D9D9"
                    Background="Transparent"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xECC8;"
                    Padding="0,0,0,0"
                    FontSize="20"
                    Width="50" />
            </Border>
        </Grid>
    </Border>
</UserControl>
