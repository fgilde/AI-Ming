<UserControl x:Class="Aimmy2.UILibrary.OllamaStatusIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:AntWpf.Controls;assembly=AntWpf"
             mc:Ignorable="d"
             d:DesignHeight="120" d:DesignWidth="300">
    <Border
        BorderThickness="1,0,1,0"
        BorderBrush="#3FFFFFFF"
        Padding="10">
        <StackPanel>
            <!-- Status Row -->
            <Grid Margin="0 0 0 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Ellipse x:Name="StatusIndicator"
                         Width="12" Height="12"
                         Fill="#FF5555"
                         VerticalAlignment="Center"
                         Margin="0 0 10 0" />

                <TextBlock x:Name="StatusText"
                           Grid.Column="1"
                           Text="Ollama: Checking..."
                           Foreground="{StaticResource Foreground}"
                           VerticalAlignment="Center"
                           FontFamily="{StaticResource Atkinson Hyperlegible}" />

                <controls:Button x:Name="RefreshButton"
                                 Grid.Column="2"
                                 Content="&#xE72C;"
                                 ToolTip="Refresh Status"
                                 FontFamily="Segoe MDL2 Assets"
                                 FontSize="14"
                                 Background="Transparent"
                                 BorderBrush="Transparent"
                                 Foreground="White"
                                 Padding="5"
                                 Click="RefreshButton_Click" />
            </Grid>

            <!-- URL Display -->
            <TextBlock x:Name="UrlText"
                       Text="URL: http://localhost:11434"
                       Foreground="#AAFFFFFF"
                       FontSize="11"
                       Margin="0 0 0 5"
                       FontFamily="{StaticResource Atkinson Hyperlegible}" />

            <!-- Available Models -->
            <TextBlock x:Name="ModelsText"
                       Text="Models: -"
                       Foreground="#AAFFFFFF"
                       FontSize="11"
                       TextWrapping="Wrap"
                       Margin="0 0 0 5"
                       FontFamily="{StaticResource Atkinson Hyperlegible}" />

            <!-- Error Message -->
            <TextBlock x:Name="ErrorText"
                       Text=""
                       Foreground="#FF8888"
                       FontSize="11"
                       TextWrapping="Wrap"
                       Visibility="Collapsed"
                       FontFamily="{StaticResource Atkinson Hyperlegible}" />

            <!-- Help Text -->
            <TextBlock Text="Install Ollama: ollama.com | Start: 'ollama serve'"
                       Foreground="#888888"
                       FontSize="10"
                       Margin="0 5 0 0"
                       TextWrapping="Wrap"
                       Visibility="{Binding Converter={StaticResource helpVis}}"
                       FontFamily="{StaticResource Atkinson Hyperlegible}" />
        </StackPanel>
    </Border>
</UserControl>
