<UserControl x:Class="UILibrary.AutoPlayActionList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:AntWpf.Controls;assembly=AntWpf"
             xmlns:local="clr-namespace:UILibrary"
             mc:Ignorable="d"
             x:Name="ThisControl"
             d:DesignHeight="300" d:DesignWidth="400">
    <Border
        BorderThickness="1"
        BorderBrush="#3FFFFFFF"
        CornerRadius="3"
        Padding="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <ListBox
                x:Name="ActionsListBox"
                ItemsSource="{Binding Actions, ElementName=ThisControl}"
                Foreground="#DDFFFFFF"
                FontFamily="{StaticResource Atkinson Hyperlegible}"
                Margin="0"
                Padding="2"
                MinHeight="100"
                MaxHeight="200"
                HorizontalContentAlignment="Stretch">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Orientation="Vertical">
                                <TextBlock
                                    Text="{Binding Name}"
                                    FontWeight="SemiBold"
                                    Foreground="{Binding IsValid, Converter={StaticResource boolToBrush}}"
                                    VerticalAlignment="Center" />
                                <TextBlock
                                    Text="{Binding DisplayText}"
                                    FontSize="10"
                                    Opacity="0.7"
                                    Foreground="#AAFFFFFF"
                                    VerticalAlignment="Center" />
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <controls:Button
                                    ToolTip="Edit Action"
                                    BorderThickness="0"
                                    Tag="{Binding}"
                                    MouseDown="UIElement_OnMouseDown"
                                    Click="EditAction_Click"
                                    EffectBrush="{StaticResource ButtonBackground}"
                                    Foreground="#ffffff"
                                    BorderBrush="#00D9D9D9"
                                    Background="Transparent"
                                    FontFamily="Segoe MDL2 Assets"
                                    Content="&#xEB7E;"
                                    Padding="0"
                                    FontSize="16"
                                    Width="35" />
                                <controls:Button
                                    ToolTip="Delete Action"
                                    BorderThickness="0"
                                    Tag="{Binding}"
                                    MouseDown="UIElement_OnMouseDown"
                                    Click="DeleteAction_Click"
                                    EffectBrush="{StaticResource ButtonBackground}"
                                    Foreground="#ffffff"
                                    BorderBrush="#00D9D9D9"
                                    Background="Transparent"
                                    FontFamily="Segoe MDL2 Assets"
                                    Content="&#xE74D;"
                                    Padding="0"
                                    FontSize="16"
                                    Width="35" />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Border Grid.Row="1" Margin="0 5 0 0">
                <controls:Button
                    HorizontalAlignment="Right"
                    ToolTip="Add Action"
                    BorderThickness="0"
                    MouseDown="UIElement_OnMouseDown"
                    Click="AddAction_Click"
                    EffectBrush="{StaticResource ButtonBackground}"
                    Foreground="#ffffff"
                    BorderBrush="#00D9D9D9"
                    Background="Transparent"
                    FontFamily="Segoe MDL2 Assets"
                    Content="&#xECC8;"
                    Padding="0"
                    FontSize="18"
                    Width="40" />
            </Border>
        </Grid>
    </Border>
</UserControl>
